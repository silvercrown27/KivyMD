<LoginScreen>:
    MDBoxLayout:
        md_bg_color: app.theme_cls.primary_color
        MDCard:
            padding: 10
            size_hint: .9, .9
            halign: "center"
            radius: 20, 20, 20, 20
            pos_hint: {"center_x": .5, "center_y": .5}
            MDBoxLayout:
                orientation: "vertical"
                md_bg_color: [0, 0, 0, 0]
                MDBoxLayout:
                    radius: [20, 20, 20, 20]
                    md_bg_color: app.theme_cls.primary_color
                    MDLabel:
                        bold: True
                        text: "Login"
                        font_style: "H3"
                        halign: "center"
                        font_name: "../fonts/pacifico/Pacifico.ttf"

                MDBoxLayout:
                    orientation: "vertical"
                    padding: [0, 30, 0, 0]
                    MDLabel:
                        bold: True
                        text: "Email"
                        padding: 20, 25
                        font_style: "Caption"
                    MDTextField:
                        width: "290dp"
                        required: True
                        mode: "round"
                        icon_left: "email"
                        padding: [0, 10, 0, 0]
                        hint_text: "Enter your email"
                        pos_hint: {"center_x": .5, "center_y": .5}

                    MDLabel:
                        bold: True
                        padding: 20, 25
                        text: "Password"
                        font_style: "Caption"
                        pos_hint: {"center_x": .5, "center_y": .5}
                    PasswordTextField:
                        width: "300dp"
                        size_hint_x: 1
                        padding: [0, 10, 0, 0]
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint: .9, .25
                    MDSwitch:
                        track_color_disabled: "lightgrey"
                        font_style: "Overline"
                        pos_hint: {'center_x': .5, 'center_y': .5}
                    MDLabel:
                        text: "Remember me"
                        padding: 14, 0
                        font_style: "Overline"
                    MDTextButton:
                        padding: 5, 0
                        text: "forgot password"
                        font_style: "Overline"
                        custom_color: "white"
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDBoxLayout:
                    orientation: "vertical"
                    padding: [0, 0, 0, 20]
                    MDRoundFlatButton:
                        text: "Sign In"
                        padding: 110, 10
                        text_color: "black"
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"center_x": .5, "center_y": .5}
                    MDLabel:
                        text: "Don't have an account..."
                        halign: "center"
                        font_style: "Overline"
                    MDRoundFlatButton:
                        text: "Create an account"
                        padding: 80, 10
                        text_color: "black"
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDBoxLayout:
                    orientation: "vertical"
                    width: "200dp"
                    halign: "center"
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(10)
                        MDLabel:
                            text: "OR\nSign In with"
                            font_style: "Caption"
                            halign: "center"
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint: .9, .7
                        padding: [self.width / 4.5, self.height / 1.7]
                        spacing: dp(25)
                        MDIconButton:
                            icon: "../icons/facebook-48.png"
                            icon_size: "16sp"
                        MDIconButton:
                            icon: "../icons/twitter-48.png"
                            icon_size: "16sp"
                        MDIconButton:
                            icon: "../icons/google-48.png"
                            icon_size: "16sp"


<PasswordTextField@MDRelativeLayout>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        mode: "round"
        width: "290dp"
        required: True
        password: True
        icon_left: "key-variant"
        hint_text: "Enter your password"
        

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

