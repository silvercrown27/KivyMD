<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        MDBoxLayout:
            MDLabel:
                bold: True
                text: "Login"
                font_style: "H3"
                padding: 95, 10
                pos_hint: {"center_x": .5}
        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                bold: True
                text: "Email"
                font_style: "Caption"
                pos_hint: {"center_x": .5, "center_y": .5}
            MDTextField:
                width: "300dp"
                required: True
                mode: "round"
                size_hint_x: None
                icon_left: "email"
                max_text_length: 25
                md_bg_color: app.theme_cls.primary_color
                hint_text: "Enter your email"
                pos_hint: {"center_x": .5, "center_y": .5}


            MDLabel:
                bold: True
                text: "Password"
                font_style: "Caption"
                pos_hint: {"center_x": .5, "center_y": .5}
            PasswordTextField:
                password: True
                width: "300dp"
                required: True
                size_hint_x: None
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "horizontal"
            padding: [10, 0, 10, 0]
            MDSwitch:
                track_color_disabled: "lightgrey"
                font_style: "Overline"
                pos_hint: {'center_x': .5, 'center_y': .5}
            MDLabel:
                text: "Remember me"
                padding: "14dp", "4dp"
                font_style: "Overline"
            MDTextButton:
                text: "forgot password"
                font_style: "Overline"
                custom_color: "white"
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "vertical"
            MDRoundFlatButton:
                text: "Sign In"
                padding: 110, 10
                text_color: "black"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}
            MDLabel:
                text: "Don't have an account..."
                padding: 90, 10
                font_style: "Overline"
            MDRoundFlatButton:
                text: "Sign In"
                padding: 110, 10
                text_color: "black"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:


<PasswordTextField@MDRelativeLayout>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: "Enter your password"
        icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True