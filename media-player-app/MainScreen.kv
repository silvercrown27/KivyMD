#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient


<MainScreen>:
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: Gradient.vertical(get_color_from_hex("#05696B"), get_color_from_hex("#301934"))

    MDNavigationLayout:

        ScreenManager:
            id: WindowManager



        MDNavigationDrawer:
            id: nav_drawer
            width: dp(150)
            radius: (0, 16, 16, 0)
            enable_swiping: True
            md_bg_color: [1, 1, 0, 0.5]

            MDNavigationDrawerMenu:
                spacing: dp(40)
                valign: "center"
                selected_color: None
                MDNavigationDrawerItem:
                    right_text: "Music"
                    text_right_color: "#4a4939"
                    icon: "music-circle-outline"

                MDNavigationDrawerItem:
                    right_text: "Videos"
                    text_right_color: "#4a4939"
                    icon: "motion-play"

                MDNavigationDrawerItem:
                    right_text: "Pictures"
                    text_right_color: "#4a4939"
                    icon: "image-filter-hdr"

                MDNavigationDrawerItem:
                    right_text: "Library"
                    text_right_color: "#4a4939"
                    icon: "plus-box-multiple"

                MDNavigationDrawerItem:
                    right_text: "Explore"
                    text_right_color: "#4a4939"
                    icon: "compass"

                MDNavigationDrawerItem:
                    right_text: "Settings"
                    text_right_color: "#4a4939"
                    icon: "dots-horizontal-circle"

