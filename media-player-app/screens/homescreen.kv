
<HomeScreen>:
    MDBoxLayout:
        MDScrollView:
            do_scroll_y: True
            do_scroll_x: False
            effect_cls: "ScrollEffect"
            bar_width: 0
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: dp(20)
                    MDBoxLayout:
                        radius: dp(20)
                        height: "200dp"
                        size_hint_y: None
                        spacing: 20
                        md_bg_color: [0, 0, 0, 0.5]
                        MDScrollView:
                            do_scroll_x: True
                            MDBoxLayout:
                                adaptive_width: True
                                height: "200dp"
                                spacing: 20
                                MDBoxLayout:
                                    size_hint_y: None
                                    height: "200dp"
                                    orientation: 'vertical'

                                    FitImage:
                                        size_hint_y: 3
                                        source: 'story.jfif'

                    MDBoxLayout:
                        radius: dp(20)
                        height: "200dp"
                        size_hint_y: None
                        md_bg_color: [0, 0, 0, 0.5]

                    MDBoxLayout:
                        radius: dp(20)
                        height: "200dp"
                        size_hint_y: None
                        md_bg_color: [0, 0, 0, 0.5]

                    MDBoxLayout:
                        radius: dp(20)
                        height: "200dp"
                        size_hint_y: None
                        md_bg_color: [0, 0, 0, 0.5]

<ResentPlays@MDBoxLayout>:
    id: resents
    orientation: "vertical"
    FitImage:
        source: "story.jfif"
    MDLabel:
        text: "Your Plays"
        padding: 0, 0
