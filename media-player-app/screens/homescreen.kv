
<HomeScreen>:
    MDBoxLayout:
        MDScrollView:
            do_scroll_y: True
            do_scroll_x: False
            effect_cls: "ScrollEffect"
            bar_width: 0
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                spacing: "20dp"
                padding: "20dp"
                MDLabel:
                    text: 'recents'
                    font_style: 'Subtitle2'
                ScrollView:
                    bar_width: 0
                    size_hint_y: None
                    height: "180dp"
                    MDBoxLayout:
                        adaptive_width: True
                        spacing: dp(20)
                        CustomImageTile:
                            source: "img/goodday.jpg"
                            text: 'Favorites'
                        CustomImageTile:
                            source: "img/pc.jpg"
                            text: '[size=26]Favorites[/size]\n[size=14]My Anime playlist[/size]'
                        CustomImageTile:
                            source: "img/vog.jpg"
                            text: '[size=26]Favorites[/size]\n[size=14]My Anime playlist[/size]'







