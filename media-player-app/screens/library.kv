<LibraryWindow>:
    MDBoxLayout:
        id: page_start
        orientation: "vertical"
        size_hint: 1, 1
        MDBoxLayout:
            size_hint: 1, None
            height: "60dp"
            pos_hint: {"top": 1}
            padding: "15dp"
            orientation: "horizontal"
            MDLabel:
                text: "Your Library"
                font_style: "H5"
            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                md_bg_color: [0, 0, 0, 0]
                pos_hint: {"center_y": .5}
                FitImage:
                    source: "components/user.jpg"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}
        ScrollView:
            bar_width: 0
            do_scroll_y: True
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                pos_hint: {'top': .9}
                spacing: "20dp"
                padding: "10dp"