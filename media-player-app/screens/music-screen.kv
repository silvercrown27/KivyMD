<MusicWindow>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        MDTopAppBar:
            title: "Your Music"
            orientation: "horizontal"
            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                md_bg_color: [0, 0, 0, 0]
                pos_hint: {"center_y": .5}
                FitImage:
                    source: "img/profile.jfif"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}

        MDTabs:
            id: tabs
            Tab:
                title: "Tracks"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: tracks
                        orientation: "vertical"
                        adaptive_height: True

            Tab:
                title: "playlist"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: playlists
                        orientation: "vertical"
                        adaptive_height: True
            Tab:
                title: "artists"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: artists
                        orientation: "vertical"
                        adaptive_height: True
            Tab:
                title: "genres"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: genres
                        orientation: "vertical"
                        adaptive_height: True



        MDBoxLayout:
            size_hint: 1, .1
            pos_hint: {"top": .2}
            spacing: root.width / 8
            MDIconButton:
                icon: "magnify"
            MDIconButton:
                icon: "play-circle-outline"
            MDIconButton:
                icon: "music-circle-outline"
            MDIconButton:
                icon: "menu"

<Tab>