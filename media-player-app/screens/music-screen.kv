<MusicWindow>:
    MDBoxLayout:
        id: page_start
        orientation: "vertical"
        spacing: "5dp"
        MDBoxLayout:
            size_hint: 1, None
            height: "60dp"
            pos_hint: {"top": 1}
            padding: "15dp"
            orientation: "horizontal"
            MDLabel:
                text: "Your Space"
                font_style: "H5"
            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                md_bg_color: [0, 0, 0, 0]
                pos_hint: {"center_y": .5}
                FitImage:
                    source: "components/user.jpg"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}

        MDTabs:
            id: tabs
            Tab:
                title: "Tracks"
                id: playing
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDList:
                        id: tracks

            Tab:
                title: "playlist"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: playlists
                        orientation: "vertical"
                        adaptive_height: True
            Tab:
                title: "artists"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: artists
                        orientation: "vertical"
                        adaptive_height: True
            Tab:
                title: "genres"
                ScrollView:
                    do_scroll_y: True
                    bar_width: 0
                    MDBoxLayout:
                        id: genres
                        orientation: "vertical"
                        adaptive_height: True

<Tab>