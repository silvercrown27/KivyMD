<HomeScreen>:
    MDFloatLayout:
        orientation: "vertical"
        size_hint: 1, 1

        MDFloatingActionButton:
            id: button
            icon: "plus"
            pos_hint: {'center_y': .2, 'center_x': .9}
            on_release: app.tap_target_start()

        MDTopAppBar:
            pos_hint: {"top": 1}
            md_bg_color: [0, 100, 200, 1]
            padding: [0, 0, 0, 10]
            elavation: 0
            MDLabel:
                text: "Good Evening"

            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                pos_hint: {"center_x": .95, "center_y": .5}
                md_bg_color: [0, 0, 0, 0]
                FitImage:
                    source: "img/profile.jfif"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}
