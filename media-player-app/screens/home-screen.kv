<HomeScreen>:
    MDScrollView:
        id: bar
        do_scroll_y: True
        do_scroll_x: False
        effect_cls: "ScrollEffect"
        bar_width: 0
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 1
            MDBoxLayout:
                size_hint: 1, None
                height: "80dp"
                pos_hint: {"top": 1}
                padding: "15dp"
                orientation: "horizontal"
                MDLabel:
                    text: "Good Morning"
                    font_style: "H5"
                MDCard:
                    size_hint: None, None
                    size: "35dp", "35dp"
                    md_bg_color: [0, 0, 0, 0]
                    pos_hint: {"center_y": .5}
                    FitImage:
                        source: "img/profile.jfif"
                        size_hint: .75, .85
                        radius: 36, 36, 36, 36
                        pos_hint: {"center_y": .5}

            ScrollView:
                do_scroll_y: True
                bar_width: 0
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    pos_hint: {'top': .9}
                    spacing: "20dp"
                    padding: "10dp"
                    MDCard:
                        size_hint: .9, .5
                    MDLabel:
                        text: "Favorites"
                        text_color: [1, 1, 1, 1]
                    MDGridLayout:
                        id: fav_places
                        adaptive_height: True
                        spacing: "5dp"
                        size_hint: 1, None
                        cols: 2

                    MDLabel:
                        text: 'recents'
                        text_color: [1, 1, 1, 1]
                    ScrollView:
                        bar_width: 0
                        size_hint_y: None
                        height: "150dp"
                        MDBoxLayout:
                            id:recents_bar
                            adaptive_width:True,
                            spacing: "15dp"

                    MDLabel:
                        text: "Playlists"
                    MDGridLayout:
                        spacing: "8dp"
                        adaptive_height: True
                        id: playlists
                        cols: 2
                        cols_minimum: {0: 170, 1: 170}


            MDBoxLayout:
                size_hint: 1, .1
                pos_hint: {"top": .2}
                spacing: root.width / 8
                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_X": .2}
                MDIconButton:
                    icon: "play-circle-outline"
                    pos_hint: {"center_X": .4}
                MDIconButton:
                    icon: "music-circle-outline"
                    pos_hint: {"right": .6}
                MDIconButton:
                    icon: "menu"
                    pos_hint: {"right": .8}