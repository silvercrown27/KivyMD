<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            MDTopAppBar:
                md_bg_color: app.theme_cls.primary_color
                size_hint: 1, None
                height: "100dp"
                padding: [0, 0, 10, 10]
        MDBoxLayout:
            height: "500dp"
            MDScrollView:
                id: bar
                do_scroll_y: True
                do_scroll_x: False
                effect_cls: "ScrollEffect"
                bar_width: 0
                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"
                    spacing: "20dp"
                    padding: "20dp"
                    MDLabel:
                        text: 'recents'
                        text_color: [1, 1, 1, 1]
                    ScrollView:
                        bar_width: 0
                        size_hint_y: None
                        height: "150dp"
                        MDBoxLayout:
                            id:recents_bar
                            adaptive_width:True,
                            spacing: "20dp"

                    ScrollView:
                        do_scroll_y: True
                        bar_width: 0
                        MDGridLayout:
                            id: playlists
        MDBoxLayout:
            orientation: "vertical"
            MDBottomAppBar:

                MDTopAppBar:
                    title: "Title"
                    icon: "git"
                    type: "bottom"
                    left_action_items: [["menu", lambda x: x]]
                    mode: "center"


