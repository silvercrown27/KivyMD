<VideosWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        MDBoxLayout:
            size_hint: 1, None
            height: "60dp"
            pos_hint: {"top": 1}
            padding: "15dp"
            orientation: "horizontal"
            MDLabel:
                text: "Your Albums"
                font_style: "H5"
            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                md_bg_color: [0, 0, 0, 0]
                pos_hint: {"center_y": .5}
                FitImage:
                    source: "components/user.jpg"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}
        ScrollView:
            bar_width: 0
            do_scroll_y: True
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                pos_hint: {'top': .9}
                spacing: "20dp"
                padding: "10dp"
                MDLabel:
                    text: "Camera"
                    text_color: [1, 1, 1, 1]
                ScrollView:
                    bar_width: 0
                    size_hint_y: None
                    height: "150dp"
                    MDBoxLayout:
                        id: camera
                        adaptive_width:True,
                        spacing: "15dp"

        MDBoxLayout:
            size_hint: 1, .1
            pos_hint: {"top": .2}
            spacing: root.width / 8
            MDIconButton:
                icon: "magnify"
            MDIconButton:
                icon: "play-circle-outline"
                on_press: app.wm.ids.WindowManager.current = "VideosWindow"
            MDIconButton:
                icon: "music-circle-outline"
                on_press: app.wm.ids.WindowManager.current = "MusicWindow"
            MDIconButton:
                icon: "home"
                on_press: app.wm.ids.WindowManager.current = "HomeScreen"