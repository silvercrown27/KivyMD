<ExploreWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        MDBoxLayout:
            size_hint: 1, None
            height: "60dp"
            pos_hint: {"top": 1}
            padding: "15dp"
            orientation: "horizontal"
            MDLabel:
                text: "Browse your files"
                font_style: "H5"
            MDCard:
                size_hint: None, None
                size: "35dp", "35dp"
                md_bg_color: [0, 0, 0, 0]
                pos_hint: {"center_y": .5}
                FitImage:
                    source: "img/profile.jfif"
                    size_hint: .75, .85
                    radius: 36, 36, 36, 36
                    pos_hint: {"center_y": .5}

        ScrollView:
            bar_width: 0
            do_scroll_y: True
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                pos_hint: {'top': .9}
                spacing: "20dp"
                padding: "10dp"

                MDFloatLayout:

                    MDRoundFlatIconButton:
                        text: "Open manager"
                        text_color: [0, 1, 1, 0]
                        icon: "folder"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: root.file_manager_open()


        MDBoxLayout:
            size_hint: 1, .1
            pos_hint: {"top": .2}
            spacing: root.width / 8
            MDIconButton:
                icon: "magnify"
            MDIconButton:
                icon: "play-circle-outline"
            MDIconButton:
                icon: "music-circle-outline"
            MDIconButton:
                icon: "menu"